<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#e2e8ef">

        <LinearLayout
            android:id="@+id/llayBack"
            android:layout_width="55dp"
            android:layout_height="50dp"
            android:background="#FE3233">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:src="@drawable/left_arrow" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="13dp"
            android:text="Promotion"
            android:textColor="#898A91"
            android:textSize="16sp" />
    </RelativeLayout>



        <LinearLayout
            android:gravity="center|top"
            android:layout_marginTop="90dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

     <!--       <com.aryvart.utician.genericclasses.Rounded_Imageview
                android:id="@+id/img_logo"
                android:layout_width="120dp"
                android:layout_height="130dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:gravity="center"

                android:src="@drawable/default_app_icon" />
-->
            <com.aryvart.uticianvender.genericclasses.CircularImageView
                android:id="@+id/user_image"
                android:layout_width="120dp"
                android:layout_height="130dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:gravity="center"

                app:siBorderWidth="2dp"
                app:siBorderAlpha="0.5"

                app:siBorderColor="@color/app_green"
                android:alpha="1"

                android:src="@drawable/default_user_icon" />




            <TextView

                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
          android:layout_marginTop="10dp"

                android:gravity="center"
                android:text="Share your personal invitation code"

                android:textColor="@color/black"
                android:textSize="10sp"
          />
            <TextView

                android:id="@+id/text_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"

                android:gravity="center"
                android:text=""

                android:textColor="@color/app_green"
                android:textSize="18sp"
                />
            <TextView


                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"

                android:gravity="center"
                android:text="Earn cash by sharing your referral code with friends"

                android:textColor="@color/black"
                android:textSize="12sp"
                />
            <TextView


                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"


                android:gravity="center"
                android:text="How many times your referral code has been used"

                android:textColor="@color/black"
                android:textSize="12sp"
                />
            <TextView


                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:id="@+id/referal_count"

                android:gravity="center"
                android:text=" "
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="12sp"
                />
            <LinearLayout
                android:id="@+id/llaySubmit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/btn_invite"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                 android:layout_marginTop="50dp"
                    android:background="@drawable/red_box"
                    android:gravity="center"
                    android:text="Invite friends"
                    android:textAllCaps="true"
                    android:textColor="#ffffff"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>




</RelativeLayout>
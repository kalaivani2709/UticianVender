<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:padding="15dp"
    android:id="@+id/lay_row"


    >

    <LinearLayout
        android:layout_gravity="center"


        android:gravity="center"
        android:id="@+id/lay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.aryvart.uticianvender.genericclasses.CircularImageView
            android:id="@+id/user_img"
            android:layout_width="50dp"
            android:layout_height="50dp"


            android:gravity="center"
            android:layout_gravity="center"


            app:siBorderWidth="2dp"
            app:siBorderAlpha="0.5"

            app:siBorderColor="@color/app_green"
            android:alpha="1"

            android:src="@drawable/default_app_icon" />
<!--
        <com.aryvart.utician.genericclasses.Rounded_Imageview
            android:id="@+id/user_img"
            android:layout_width="50dp"
            android:layout_height="50dp"


            android:gravity="center"
            android:src="@drawable/default_app_icon" />-->
    </LinearLayout>

    <LinearLayout

        android:layout_gravity="center"


        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_toRightOf="@+id/lay"
        android:gravity="center"

        android:orientation="horizontal"
        android:weightSum="2">

        <LinearLayout
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1.5"
            android:orientation="vertical">

            <TextView
                android:layout_marginTop="5dp"
                android:id="@+id/txt_user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/white"
                android:textSize="16sp" />


            <TextView

                android:id="@+id/txt_services"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:maxLines="4"
               android:text=""
                android:textColor="@color/white"
                android:textSize="13sp" />



        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:weightSum="2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/time"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.2"

                android:layout_gravity="center"


                android:layout_marginRight="10dp"

                android:gravity="right"
                android:text=""
               android:textSize="12sp"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <TextView

                android:layout_marginRight="10dp"
                android:layout_gravity="center"
                android:id="@+id/cancel"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_weight=".8"

                android:background="@drawable/red_box"

                android:layout_height="0dp"
                android:textColor="@color/white"




                android:text="Cancel"

                android:textSize="12sp" />

        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/lay"

        android:background="@color/colorPrimaryDark" />
</LinearLayout>
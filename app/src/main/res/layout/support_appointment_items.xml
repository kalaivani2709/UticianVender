<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/lay1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:weightSum="4">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">
            <com.aryvart.uticianvender.genericclasses.CircularImageView
                android:id="@+id/usr_img"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"


                app:siBorderWidth="2dp"
                app:siBorderAlpha="0.5"

                app:siBorderColor="@color/app_green"
                android:alpha="1"

                android:src="@drawable/default_user_icon" />




         <!--   <com.aryvart.utician.genericclasses.Rounded_Imageview
                android:id="@+id/usr_img"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/default_user_icon" />-->
        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_weight="2.5"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center"
                android:text=""
                android:textColor="@color/black"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/txt_service"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:text=""
                android:textColor="#666"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/txt_dattime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text=""
                android:textColor="#666"
                android:textSize="12sp" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_issue"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight=".5"
            android:background="@drawable/red_box"
            android:gravity="center"
            android:text="ISSUE"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="12dp" />

    </LinearLayout>
</RelativeLayout>
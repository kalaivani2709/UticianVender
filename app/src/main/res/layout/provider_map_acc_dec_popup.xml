    <com.aryvart.utician.genericclasses.CircularImageView
        android:id="@+id/user_image"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_gravity="center"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="5dp"

        app:siBorderWidth="2dp"
        app:siBorderAlpha="0.5"

        app:siBorderColor="@color/app_green"
        android:alpha="1"

        android:src="@drawable/default_user_icon" />


    <TextView
        android:id="@+id/txt_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="Username"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#666" />

    <TextView
        android:id="@+id/txt_Rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="4.8 Star Rating"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#666" />

    <TextView
        android:id="@+id/txt_Message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="left"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="5dp"
        android:scrollHorizontally="false"
        android:text="Message"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#666" />

    <TextView
        android:id="@+id/txt_note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="If you accept this will show in your appointments"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#666"
        android:textSize="12sp" />

    <LinearLayout
        android:id="@+id/llay_text"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"


        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="2">



            <Button
                android:id="@+id/btn_Accept"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_gravity="center"

                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"

                android:layout_weight="1"
                android:background="@drawable/green_box"
                android:gravity="center"
                android:text="ACCEPT"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="16dp" />


            <Button
                android:id="@+id/btn_Decline"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_gravity="center"

                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"

                android:layout_weight="1"
                android:background="@drawable/red_box"
                android:gravity="center"
                android:text="Decline"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="16dp" />


    </LinearLayout>


</LinearLayout>
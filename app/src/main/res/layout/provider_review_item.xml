<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="10dp"
    android:orientation="vertical"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
<!--

        <com.aryvart.utician.genericclasses.Rounded_Imageview
            android:id="@+id/reviewer_image"
            android:layout_width="76dp"
            android:layout_height="76dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/default_user_icon" />
-->



        <com.aryvart.uticianvender.genericclasses.CircularImageView
            android:id="@+id/reviewer_image"
            android:layout_width="76dp"
            android:layout_height="76dp"
            android:layout_marginTop="5dp"


            app:siBorderWidth="2dp"
            app:siBorderAlpha="0.5"

            app:siBorderColor="@color/app_green"
            android:alpha="1"

            android:src="@drawable/default_user_icon" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_weight="2"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_rating_personName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#000"
                    android:textSize="16sp" />

                <RatingBar
                    android:id="@+id/tv_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:progressDrawable="@drawable/rating_bar_style"
                    android:rating="0"
                    android:stepSize="0.1" />


                <TextView
                    android:id="@+id/tv_rating_status"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginTop="3dp"
                    android:ellipsize="end"
                    android:scrollbars="vertical"
                    android:text=""
                    android:textColor="#666"
                    android:textSize="14sp" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/colorPrimaryDark" />
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#e2e8ef">

        <ImageView
            android:id="@+id/back_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/red_left_arrow" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ellipsize="marquee"
            android:gravity="center"
            android:singleLine="true"
            android:text="Schedule"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="#898A91" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFF"
            android:orientation="vertical">

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#42dcdc"
                android:gravity="center"
                android:padding="10dp"
                android:singleLine="true"
                android:text="choose your schedule"
                android:textAllCaps="true"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
                android:textColor="#FFFFFF" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1.3"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="FROM"
                            android:textSize="12sp" />

                        <LinearLayout
                            android:id="@+id/lay_from_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/from_date"
                                android:layout_width="30dp"
                                android:layout_height="wrap_content"
                                android:background="@drawable/textview_border"
                                android:gravity="center"
                                android:hint="DD"
                                android:padding="2dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="2dp"
                                android:text=":" />

                            <TextView
                                android:id="@+id/from_month"
                                android:layout_width="30dp"
                                android:layout_height="wrap_content"
                                android:background="@drawable/textview_border"
                                android:gravity="center"
                                android:hint="MM"
                                android:padding="2dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="2dp"
                                android:text=":" />

                            <TextView
                                android:id="@+id/from_year"
                                android:layout_width="50dp"
                                android:layout_height="wrap_content"
                                android:background="@drawable/textview_border"
                                android:gravity="center"
                                android:hint="YYYY"
                                android:padding="2dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/lay_from_time"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/from_hour"
                                android:layout_width="30dp"
                                android:layout_height="wrap_content"
                                android:background="@drawable/textview_border"
                                android:gravity="center"
                                android:hint="HH"
                                android:padding="2dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="2dp"
                                android:text=":" />

                            <TextView
                                android:id="@+id/from_min"
                                android:layout_width="30dp"
                                android:layout_height="wrap_content"
                                android:background="@drawable/textview_border"
                                android:gravity="center"
                                android:hint="MM"
                                android:padding="2dp" />

                            <TextView
                                android:id="@+id/from_am"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:gravity="center"
                                android:padding="2dp"
                                android:text="AM"
                                android:textColor="#666"
                                android:textSize="10sp" />

                            <TextView
                                android:id="@+id/from_pm"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:gravity="center"
                                android:padding="2dp"
                                android:text="PM"
                                android:textColor="#666"
                                android:textSize="10sp" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.4"
                        android:gravity="center|left"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/availability_arrow" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.3"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="TO"
                            android:textSize="12sp" />

                        <LinearLayout
                            android:id="@+id/lay_to_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/to_date"
                                android:layout_width="30dp"
                                android:layout_height="wrap_content"
                                android:background="@drawable/textview_border"
                                android:gravity="center"
                                android:hint="DD"
                                android:padding="2dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="2dp"
                                android:text=":" />

                            <TextView
                                android:id="@+id/to_month"
                                android:layout_width="30dp"
                                android:layout_height="wrap_content"
                                android:background="@drawable/textview_border"
                                android:gravity="center"
                                android:hint="MM"
                                android:padding="2dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="2dp"
                                android:text=":" />

                            <TextView
                                android:id="@+id/to_year"
                                android:layout_width="50dp"
                                android:layout_height="wrap_content"
                                android:background="@drawable/textview_border"
                                android:gravity="center"
                                android:hint="YYYY"
                                android:padding="2dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/lay_to_time"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/to_hour"
                                android:layout_width="30dp"
                                android:layout_height="wrap_content"
                                android:background="@drawable/textview_border"
                                android:gravity="center"
                                android:hint="HH"
                                android:padding="2dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="2dp"
                                android:text=":" />

                            <TextView
                                android:id="@+id/to_min"
                                android:layout_width="30dp"
                                android:layout_height="wrap_content"
                                android:background="@drawable/textview_border"
                                android:gravity="center"
                                android:hint="MM"
                                android:padding="2dp" />

                            <TextView
                                android:id="@+id/to_am"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:gravity="center"
                                android:padding="2dp"
                                android:text="AM"
                                android:textColor="#666"
                                android:textSize="10sp" />

                            <TextView
                                android:id="@+id/to_pm"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:gravity="center"
                                android:padding="2dp"
                                android:text="PM"
                                android:textColor="#666"
                                android:textSize="10sp" />

                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>


            </RelativeLayout>


            <Button
                android:id="@+id/save"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:background="@drawable/red_box"
                android:text="Save"
                android:textAllCaps="true"
                android:textColor="#FFF" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFF"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#42dcdc"
                android:gravity="center"
                android:padding="10dp"
                android:singleLine="true"
                android:text="schedule"
                android:textAllCaps="true"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
                android:textColor="#FFFFFF" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="horizontal"
                android:weightSum="4">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.6"
                    android:gravity="center"
                    android:text="Date/Time FROM"
                    android:textColor="#666"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.6"
                    android:gravity="center"
                    android:text="Date/Time  TO"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:gravity="center"
                    android:text="Action"
                    android:textSize="14sp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#42dcdc" />

            <ScrollView
                android:id="@+id/my_scroll"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/relative"
                android:layout_gravity="center"
                android:layout_marginTop="5dp">

                <LinearLayout
                    android:id="@+id/avail_content"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"></LinearLayout>

            </ScrollView>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>
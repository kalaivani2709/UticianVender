<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#e2e8ef">

        <LinearLayout
            android:id="@+id/llayBack"
            android:layout_width="55dp"
            android:layout_height="50dp"
            android:background="#FE3233">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:src="@drawable/left_arrow" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="13dp"
            android:text="Services"
            android:textColor="#898A91"
            android:textSize="16sp" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/header">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/img_logo"
                android:layout_width="130dp"
                android:layout_height="150dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:background="@drawable/logo"
                android:gravity="center" />

            <RelativeLayout
                android:id="@+id/ServiceHeader"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/img_logo"
                android:layout_margin="20dp"
                android:layout_marginTop="5dp"
                android:background="#30baba"
                android:elevation="2dp">

                <TextView
                    android:id="@+id/tv_serviceHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="left"
                    android:padding="13dp"
                    android:text="Services"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="#fff"
                    android:textStyle="normal" />

                <ImageView
                    android:id="@+id/imv_Addservices"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_toRightOf="@+id/tv_serviceHeader"
                    android:src="@drawable/add" />

                <LinearLayout
                    android:id="@+id/llaySubmit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_margin="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/green_box"
                        android:gravity="center"
                        android:text="submit"
                        android:textAllCaps="true"
                        android:textColor="#fff"
                        android:textStyle="bold" />
                </LinearLayout>


            </RelativeLayout>

            <LinearLayout
                android:id="@+id/llayParent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/ServiceHeader"
                android:layout_marginTop="2dp"
                android:elevation="2dp"
                android:orientation="vertical">

            </LinearLayout>

        </RelativeLayout>


    </ScrollView>

</LinearLayout>